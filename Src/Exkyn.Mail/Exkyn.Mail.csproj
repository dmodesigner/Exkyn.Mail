<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Exkyn Mail</Title>
    <Authors>Daniel Moura de Oliveira</Authors>
    <Company>Exkyn Tecnologia</Company>
    <Description>Biblioteca para envio de e-mail usando .NET.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/dmodesigner/Exkyn.Mail</RepositoryUrl>
    <PackageTags>exkyn exkyn.mail email</PackageTags>
    <Version>1.0.0</Version>
    <PackageIcon>icon-exkyn.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\.github\images\icon-exkyn.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
